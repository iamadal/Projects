<h1> Please Register </h1>

 <% if (flashMessage) { %>
        <p style="color: green;"><%= flashMessage %></p>
    <% } %>



<form method="post" action="/cms/create">
  <input type="hidden" name="_csrf" value="<%= _csrf %>">
  <input type="text" placeholder="Enter your username" name="username" required> <br><br>
  <input type="password" placeholder="Enter your password" name="password" required> <br><br>
  <input type="email" placeholder="Enter email" name="email" required> <br><br>
  <input type="tel" placeholder="Enter phone number" name="phone" required pattern="^0\d{10}$" title="Phone number must be 11 digits, starting with a leading zero."> <br><br>
  <input type="Submit" value="Save">
</form>

<a href="/cms/login">Signin</a>