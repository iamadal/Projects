{
  "compilerOptions": {
    "target": "ESNext",                 // Latest JavaScript
    "module": "ESNext",                 // Keep import/export (for Node ESM)
    "moduleResolution": "node",         // Resolve node_modules properly
    "outDir": "./dist",                 // Compiled JS output folder
    "rootDir": "./src",                 // Source files folder
    "strict": true,                     // Turn on all strict type-checking options
    "esModuleInterop": true,             // Allow default imports from CommonJS
    "forceConsistentCasingInFileNames": true,  // File names must match casing
    "skipLibCheck": true,                // Speed up build (skip type checking node_modules)
    "verbatimModuleSyntax": true,        // Don't touch my import paths (important for .js extensions)
    "allowSyntheticDefaultImports": true, // Allow `import x from 'y'`
    "resolveJsonModule": true,           // Allow importing JSON files
    "noEmitOnError": true,               // Don't emit .js if there are TS errors
    "isolatedModules": true,             // Each file is a separate module (for future proofing)
    "incremental": true                  // Faster builds
  },
  "include": ["src/**/*.ts"],            // Only compile .ts files inside src/
  "exclude": ["node_modules", "dist"]     // Ignore node_modules and dist
}
